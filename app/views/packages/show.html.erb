<style>
	tbody {
		border: 2px, #dadada;
		padding-bottom: 20px;
	}
	li {
		list-style: none;
		padding: 0px 20px 0px 20px;

	}
	.image {
		margin: 20px 0 20px 0;
	}
	th, td {
		padding: 20px 20px 0px 20px;
	}
</style>


<div class="container">
	<div class="row">
		<div class="col-xs-4">
			<ul>
				<li class="image"><%= attachment_image_tag @package, :disc_image, :fill,200,200 %></li>
				<li><strong>ジャンル</strong></li>
				<li><%= @package.genre.category %></li>
				<li><strong>値段　</strong><%= @package.price %><strong>円</strong></li>
				<li><%= link_to "カートに追加する。",   package_add_item_path(@package), method: :post %></li>
				<li><%= @package.disc_status %></li>
			</ul>
		</div>
		<div class="col-xs-8">
			<ul>
				<li><%= @package.title %></li>
				<li><%= @package.artist.artist %></li>
				<li><%= @package.label.label %></li>
			</ul>
			<table class="table">
				<% @discs.each do |disc| %>
					<thead>
						<tr>
							<th>Disc.<%= disc.disc_number %></th>
							<th>曲名</th>
							<th>アーティスト名</th>
						</tr>
					</thead>
					<% disc.songs.each do |song| %>
						<tbody>
							<tr>
								<td><%= song.song_number%></td>
								<td><%= song.song %></td>
								<!-- アーティスト名 -->
							</tr>
						</tbody>
					<% end %>
				<% end %>
			</table>
		</div>
	</div>
</div>