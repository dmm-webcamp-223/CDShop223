<style>
.disc {
  margin-top:10px;
}
</style>
    <div class="col-xs-8">
      <div class="tiarla">
        <h4><span class="label label-default">商品名</span></h4>
        <%= @package.title %><br>
        <h4><span class="label label-default">アーティスト</span></h4>
          <%= @package.artist.artist %><br>
        <h4><span class="label label-default">レーベル</span></h4>
        <%= @package.label.label %><br>
      </div>
			<table class="table">
				<% discs.each do |disc| %>
					<thead>
						<tr class="info">
							<th>Disc.<%= disc.disc_number %></th>
							<th>曲名</th>
						</tr>
					</thead>
					<% disc.songs.each do |song| %>
						<tbody>
							<tr>
								<td><%= song.song_number %></td>
								<td><%= song.song %></td>
							</tr>
						</tbody>
					<% end %>
				<% end %>
			</table>
    </div>
