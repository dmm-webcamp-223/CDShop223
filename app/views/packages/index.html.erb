<div class="container">
	<div id="container">
		<div id="theTarget">
			<div class="image1"></div>
			<div class="image2"></div>
			<div class="image3"></div>
			<div class="image4"></div>
			<div class="image5"></div>
		</div>
	</div>
	<div class="row">
		<h2>新着順</h2>
	</div>
    	<% @packages.each do |package| %>
    	<div class="row">
      		<%= link_to package_path(package.id) do%>
        		<%= package.disc_image %>
      		<% end %>
        	<%= package.artist.artist %>
        	<%= package.title %>
        	<%= package.price %>
    	<% end %>
    </div>
    <%= paginate @packages, class: "paginate" %>
</div>


