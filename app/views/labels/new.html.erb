<h1>ラベル名一覧（名前順）</h1>

<%= form_for(@label) do |f| %>
    <h4>ラベル名規登録</h4>
    <%= f.text_field :label %>
<%= f.submit '確定' %>
<% end %>

<session>
  <h1>ラベル名</h1>
      <table>
        	<tr>
				<th>ラベル名</th>
				<th>削除</th>
			</tr>
        
          <% @labels.each do |a| %>
          <tr>
              <td><%= a.label %></td>
              <td><%= link_to "削除", label_path(a.id), method: :delete %></td>
          </tr>
          <% end %>
      
      </table>
</session>

