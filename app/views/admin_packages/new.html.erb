<div class = "container">
  <h1>新規商品の追加</h1>
  <%= form_for(@package, url: '/admin_packages') do |f| %>
  <div class = "row">
    <div class = "col-lg-3" >
      <h4>アーティストを選ぶ</h4>
      <%= f.collection_select :artist_id, @artists, :id, :artist, include_blank: 'アーティスト' %><%= link_to "アーティストの追加", new_artist_path %>
      <h4>レーベルを選ぶ</h4>
      <%= f.collection_select :label_id, @labels, :id, :label, include_blank: 'レーベル' %><%= link_to "レーベルの追加", new_label_path %>
      <h4>ジャンルを選ぶ</h4>
      <%= f.collection_select :genre_id, @genres, :id, :category, include_blank: 'ジャンル' %><%= link_to "ジャンルの追加", new_genre_path %>
    </div>
    <div class ="col-lg-3">
      <h4>商品名</h4>
      <%= f.text_field :title %>
      <h4>税抜き価格</h4>
      <%= f.number_field :price %>
      <h4>ジャケット画像</h4>
      <%= f.attachment_field :disc_image %>
    </div>

    <div class="package col-lg-6">
      <div id="#dogList">
        <%= f.fields_for :discs do |t| %>
        <%= render "disc_fields", f: t %>
      </div>
      <% end %>
      <div class = "disc-links">
        <%= link_to_add_association  "ディスクを追加", f, :discs , class: "btn btn-link", data: {  association_insertion_method: "append" }%>
      </div>

      <div class="actions">
        <%= f.submit 'Save'%>
      </div>
    </div>
  </div>
  <% end %>
</div>
