<style>
	.col-xs-2 {
		margin-bottom:30px;
		text-aline:center;
	}
</style>

<div class="container">
	<div class="row">
		<h2>新着順</h2>
		<% @packages.each do |package| %>
		<div class="col-xs-3">
			<%= link_to admin_package_path(package.id) do %>
			<%= attachment_image_tag package, :disc_image, size:"100x100", fallback: "no_image.jpg" %><br>
			<% end %>
			<%= package.artist.artist %><br>
			<%= package.title %><br>
			<%= package.price %><strong> 円</strong><br>
		</div>
		<% end %>
		<div class="col-xs-7 col-xs-offset-5">
			<%= paginate @packages, class: "paginate" %>
		</div>
	</div>
</div>
