<div class="container">
	<div class="row">
		<h2>新着順</h2>
	</div>
    	<% @packages.each do |package| %>
    	<div class="row">
      		<%= link_to package_path(package.id) do %>
        		<%= attachment_image_tag @package, :disc_image, :fill,200,200, fallback: "no_imag.jpg" %>
      		<% end %>
        	<%= package.artist.artist %>
        	<%= package.title %>
        	<%= package.price %>
    	<% end %>
    </div>
    <%= paginate @packages, class: "paginate" %>
</div>
