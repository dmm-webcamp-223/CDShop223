<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <div class="rounded has-shadow-1">

      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="text-center">
        <h2 class="form-header-title">ユーザー編集</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="form-group row">
          <div class="col-sm-6">
            <%= f.text_field :name_kanzi_sei, autofocus: true, class:"form-control", autocomplete: "on", placeholder:"姓" %>
          </div>

          <div class="col-sm-6">
            <%= f.text_field :name_kanzi_mei, class:"form-control", autocomplete: "on", placeholder:"名" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-6">
            <%= f.text_field :name_kana_sei, class:"form-control", autocomplete: "on", placeholder:"セイ" %>
          </div>

          <div class="col-sm-6">
            <%= f.text_field :name_kana_mei, class:"form-control", autocomplete: "on", placeholder:"メイ" %>
          </div>
        </div>

        <div class="field">
          <%= f.text_field :postal_code, class:"form-control", autocomplete: "on", placeholder:"郵便番号" %>
        </div>

        <div class="field">
          <%= f.text_field :address, class:"form-control", autocomplete: "on", placeholder:"住所" %>
        </div>

        <div class="field">
          <%= f.text_field :phone_number, class:"form-control", autocomplete: "on", placeholder:"電話番号" %>
        </div>

        <div class="field">
          <%= f.email_field :email, class:"form-control", autocomplete: "on", placeholder:"メールアドレス" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.password_field :password, class:"form-control", autocomplete: "nope", placeholder:"新しいパスワード(変更しない場合は空欄)" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "nope", placeholder:"もう一度新しいパスワードを入力" %>
        </div>

        <div class="field">
          <%= f.password_field :current_password, class:"form-control", autocomplete: "nope", placeholder:"現在のパスワード" %>
        </div>

        <div class="actions">
          <%= f.submit "更新", class:"btn btn-primary btn-sm" %>
        </div>
        <% end %>
        <%= link_to "戻る", :back %>
        <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "よろしいですか？" }, method: :delete %>
        
      </div>
    </div>
  </div>
</div>