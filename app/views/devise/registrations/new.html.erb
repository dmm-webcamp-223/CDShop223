<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <div class="rounded has-shadow-1">
      <%= render "devise/shared/error_messages", resource: resource %>
      <h2 class="form-title text-center">新規登録</h2>

      <div class="form-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group row">
          <div class="col-sm-6">
            <%= f.text_field :name_kanzi_sei, autofocus: true, class:"form-control", autocomplete: "nope", placeholder:"姓" %>
          </div>

          <div class="col-sm-6">
            <%= f.text_field :name_kanzi_mei, class:"form-control", autocomplete: "nope", placeholder:"名" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-6">
            <%= f.text_field :name_kana_sei, class:"form-control", autocomplete: "nope", placeholder:"セイ" %>
          </div>

          <div class="col-sm-6">
            <%= f.text_field :name_kana_mei, class:"form-control", autocomplete: "nope", placeholder:"メイ" %>
          </div>
        </div>

        <div class="field">
          <%= f.text_field :postal_code, class:"form-control", autocomplete: "nope", placeholder:"郵便番号" %>
        </div>

        <div class="field">
          <%= f.text_field :address, class:"form-control", autocomplete: "nope", placeholder:"住所" %>
        </div>

        <div class="field">
          <%= f.text_field :phone_number, class:"form-control", autocomplete: "nope", placeholder:"電話番号" %>
        </div>

        <div class="field">
          <%= f.email_field :email, class:"form-control", autocomplete: "nope", placeholder:"メールアドレス" %>
        </div>

        <div class="field">
          <%= f.password_field :password, class:"form-control", autocomplete: "nope", placeholder:"パスワード(#{@minimum_password_length}文字以上)" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "nope", placeholder:"パスワード確認" %>
        </div>

        <div class="actions">
          <%= f.submit "登録", class:"btn btn-primary" %>
          <%= link_to "ログイン画面へ", new_user_session_path, class:"btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>