<div class="container">
  <div class="row">
    <div class="col-md-4 col-offset-4">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-header text-center">
        <h2 class="form-header-title">新規登録</h2>
      </div>
      <div class="form-body text-center">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <p>姓</p>
        <%= f.text_field :name_kanzi_sei, autofocus: true, autocomplete: "name_kanzi_sei" %>
      </div>

      <div class="field">
        <p>名</p>
        <%= f.text_field :name_kanzi_mei, autofocus: true, autocomplete: "name_kanzi_mei" %>
      </div>

      <div class="field">
        <p>セイ</p>
        <%= f.text_field :name_kana_sei, autofocus: true, autocomplete: "name_kana_sei" %>
      </div>

      <div class="field">
        <p>メイ</p>
        <%= f.text_field :name_kana_mei, autofocus: true, autocomplete: "name_kana_mei" %>
      </div>

      <div class="field">
      <p>郵便番号</p>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>

      <div class="field">
      <p>住所</p>
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>

      <div class="field">
      <p>電話番号</p>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </div>

      <div class="field">
      <p>メールアドレス</p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
      <p>パスワード</p>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上で入力)</em><br>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
      <p>パスワード確認</p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
      <%= f.submit "登録" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>