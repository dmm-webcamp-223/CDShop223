<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <div class="rounded has-shadow-1">
      <%= render "admins/shared/error_messages", resource: resource %>
      <h2 class="form-title text-center">新規登録(管理者)</h2>
    </div>
    <div class="form-body text-center">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.email_field :email, class:"form-control", autocomplete: "nope", placeholder:"メールアドレス" %>
      </div>

      <div class="field">
        <%= f.password_field :password, class:"form-control", autocomplete: "nope", placeholder:"パスワード(#{@minimum_password_length}文字以上)" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "nope", placeholder:"パスワード確認" %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class:"btn btn-primary btn-sm" %>
      </div>
      <% end %>

      <%= render "admins/shared/links" %>
    </div>
  </div>
</div>